{
  "$schema": "http://json.schemastore.org/template",
  "author": "Koop",
  "classifications": [ "Koop", "Koopbank", "Template" ],
  "identity": "KoopTemplate.Solution.Template",
  "name": "KoopTemplate Multi-Project Solution",
  "shortName": "koop-solution",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "KoopTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "replaces": "{framework}",
      "defaultValue": "net8.0",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "choice": "net9.0",
          "choice": "net10.0"
        }
      ]
    },
    "SSL_CONFIG": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Configures GRPC connections with SSL"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".vs/**",
            ".template_config/**",
            "README.md",
            ".DS_Store",
            ".gitignore",
            ".git/**",
            ".idea/**",
            ".vscode/**",
            "bin/**",
            ".obj/**",
            "KoopTemplate.Server/Migrations/**",
            "KoopTemplate.Grpc/Migrations/**",
            "nuget.csproj",
            "KoopTemplate.*.nupkg"
          ]
        }
      ]
    }
  ]
}
