{
  "$schema": "http://json.schemastore.org/template",
  "author": "Koop",
  "classifications": [ "Koop", "Koopbank", "Template" ],
  "identity": "KoopTemplate.Solution.Template",
  "name": "KoopTemplate Multi-Project Solution",
  "shortName": "koop-solution",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "KoopTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "replaces": "{framework}",
      "defaultValue": "net9.0",
      "datatype": "choice",
      "choices": [
        { "choice": "net9.0" },
        { "choice": "net10.0" }
      ]
    },
    "ApiStyle": {
      "type": "parameter",
      "description": "Select API style.",
      "datatype": "choice",
      "defaultValue": "Rest",
      "choices": [
        { "choice": "Rest", "description": "Use KoopTemplate.Server (REST API)" },
        { "choice": "Grpc", "description": "Use KoopTemplate.Grpc (gRPC)" }
      ]
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".vs/**",
            ".template_config/**",
            "README.md",
            ".DS_Store",
            ".gitignore",
            ".git/**",
            ".idea/**",
            ".vscode/**",
            "bin/**",
            ".obj/**",
            "KoopTemplate.Rest/Migrations/**",
            "KoopTemplate.Grpc/Migrations/**",
            "nuget.csproj",
            "KoopTemplate.*.nupkg"
          ]
        },
        {
          "condition": "(ApiStyle == \"Grpc\")",
          "exclude": [
            "KoopTemplate.Rest/**"
          ]
        },
        {
          "condition": "(ApiStyle == \"Rest\")",
          "exclude": [
            "KoopTemplate.Grpc/**"
          ]
        }
      ]
    }
  ]
}
